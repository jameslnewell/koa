{
  "name": "koa",
  "private": true,
  "version": "1.0.0",
  "description": "A number of packages made to work with koa.",
  "repository": "https://github.com/jameslnewell/koa",
  "author": "James Newell <james@digitaledgeit.com.au>",
  "workspaces": [
    "koa-create-context",
    "koa-reload-middleware",
    "koa-router-middleware"
  ],
  "dependencies": {
    "@jameslnewell/editor-config": "^1.0.0",
    "@jameslnewell/prettier-config": "^1.0.0",
    "@jameslnewell/typescript-config": "^2.0.1",
    "@types/koa": "^2.0.48",
    "@types/jest": "^24.0.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "koa": "^2.7.0",
    "koa-create-context": "^1.0.2",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "prettier-config": "^1.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces run clean",
    "lint:linting:sources": "tslint --config .configs/tslint.linting.sources.json --project .configs/tsconfig.linting.sources.json",
    "lint:linting:tests": "tslint --config .configs/tslint.linting.tests.json --project .configs/tsconfig.linting.tests.json",
    "lint": "yarn run lint:linting:sources && yarn run lint:linting:tests && yarn workspaces run lint",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test"
  },
  "license": "MIT"
}
