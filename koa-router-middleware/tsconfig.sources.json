// used for typechecking and transpiling sources via the CLI
{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "lib",
    "target": "esnext"
  },
  "include": ["typings/**/*.d.ts", "src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "test/**/*.test.ts", "src/**/__fixtures__"]
}
